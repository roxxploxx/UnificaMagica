    <!-- Pants of Speed -->
    <ThingDef ParentName="WizardArmorMakeableBase">
        <defName>UM_Pants_of_Speed</defName>
        <label>pants of speed</label>
        <description>Your pants have some get-up-and-go!</description>
        <recipeMaker>
            <researchPrerequisite>EnchantingI</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/Various/Pants_OnMap</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <costStuffCount>50</costStuffCount>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
        <costList>
            <PowerRune>5</PowerRune>
        </costList>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <WorkToMake>10000</WorkToMake>
            <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
            <Insulation_Cold>-3</Insulation_Cold>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>1.2</MoveSpeed>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>OnSkin</li>
            </layers>
            <tags>
                <li>Outlander</li>
                <li>Spacer</li>
            </tags>
            <defaultOutfitTags>
                <li>Worker</li>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>


    <!-- WizardRobes -->
    <ThingDef ParentName="WizardArmorMakeableBase">
        <defName>Apparel_ArcaneWizardRobe</defName>
