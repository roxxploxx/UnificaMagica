    <!-- A place to grow Druid short range defenses -->
    <ThingDef ParentName="FurnitureBase">
        <defName>DruidDefensiveSpot</defName>
        <label>druid defensive spot</label>
        <description>Druids plant specialized plants here for short range defenses.</description>
        <thingClass>UnificaMagica.UMBuilding_PlantGrower</thingClass>
        <graphicData>
            <texPath>Things/Druid/DefensiveSpot</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shadowData>
                <volume>(0.3, 0.6, 0.3)</volume>
            </shadowData>
            <damageData>
                <rect>(0.2,0.2,0.6,0.6)</rect>
            </damageData>
        </graphicData>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <fillPercent>0.20</fillPercent>
        <tickerType>Rare</tickerType>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToBuild>495</WorkToBuild>
            <Mass>2</Mass>
            <Flammability>0.0</Flammability>
        </statBases>
        <stuffCategories>
            <li>Woody</li>
            <li>Stony</li>
        </stuffCategories>
        <costStuffCount>35</costStuffCount>
        <comps>
            <li Class="CompProperties_Forbiddable"/>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>DruidEnvironmentMark</li>
                </linkableFacilities>
            </li>
        </comps>
        <fertility>1.0</fertility>
        <designationCategory>UnificaMagicaDesignation</designationCategory>
        <designationHotKey>Misc9</designationHotKey>
        <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
        <building>
            <defaultPlantToGrow>DruidHerbs</defaultPlantToGrow>
            <sowTag>SowDruidDefensiveSpot</sowTag>
        </building>
        <rotatable>false</rotatable>
        <placeWorkers>
            <li>PlaceWorker_NotUnderRoof</li>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
        <specialDisplayRadius>2.4</specialDisplayRadius>
        <damageMultipliers>
            <li>
                <damageDef>Bomb</damageDef>
                <multiplier>.1</multiplier>
            </li>
        </damageMultipliers>
